# AI Provider Configuration
# Default providers for each capability
AI_TEXT_PROVIDER=claude
AI_IMAGE_PROVIDER=ideogram
AI_VIDEO_PROVIDER=openai

# Claude Configuration
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20241022

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Ideogram Configuration
IDEOGRAM_API_KEY=your-ideogram-api-key
IDEOGRAM_MODEL=ideogram-v2

# Module-specific providers (optional)
STORYBOARD_CHARACTER_PROVIDER=
STORYBOARD_SHOT_PROVIDER=

# Rate Limiting
AI_RATE_LIMITING_ENABLED=true
AI_RATE_LIMIT_PER_MINUTE=60

# Caching
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_CACHE_STORE=redis

# Logging
AI_LOGGING_ENABLED=true
AI_LOG_CHANNEL=ai
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false
AI_LOG_ERRORS=true